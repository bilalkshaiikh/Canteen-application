<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="already">
        <item name="android:textColor">#002d57</item>
    </style>

    <style name="eatcan">
        <item name="android:textSize">72sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#e3000000</item>
        <item name="android:shadowDx">@null</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">43</item>
    </style>

    <style name="edit_phone">
        <item name="android:textColor">#e3000000</item>
    </style>

    <style name="ordering_ma">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fa8d2a</item>
    </style>

    <style name="works">
        <item name="android:textColor">#fa8d2a</item>
    </style>

    <style name="reuse">
        <item name="android:textColor">#dc143c</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
